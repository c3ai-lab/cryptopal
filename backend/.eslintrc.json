{
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": ["prettier", "airbnb-base"],
    "plugins": ["prettier"],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "no-console": "off",
      "no-plusplus": "off",
      "linebreak-style": 0,
      "operator-linebreak": [
        "error",
        "after"
      ],
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "exports": "always-multiline",
          "functions": "never",
          "imports": "always-multiline",
          "objects": "always-multiline"
        }
      ],
      "no-underscore-dangle": "off",
      "camelcase": [{"properties": "never"}],
      "consistent-return": "off",
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "printWidth": 80,
          "tabWidth": 2,
          "endOfLine": "auto"
        }
      ]
    }
  }
  